extends ../_bootstrap
append styles
    // Custom styles for this template
    link(href='../css/overview.css', rel='stylesheet' type='text/css')
block body
    // Static navbar
    +navbar-static("badminton-api","navbar")
        +nav_item("/") Home
        +nav_item("/players", "active") Players

    //- +dropdown("Discipline",[
